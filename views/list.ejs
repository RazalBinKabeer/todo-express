<%- include("header") -%>

<div class="box" id="heading">
    <h1><%= listTitle %></h1>
</div>

<div class="box">
    <% newTodoInputs.forEach((item) => { %>
    <div class="item">
        <input type="checkbox" />
        <p><%= item %></p>
    </div>
    <% }) %>
    <form class="item" action="/" method="post">
        <input
            placeholder="New Item"
            type="text"
            name="todoInput"
            id="todo-input"
            autocomplete="off"
        />
        <button name="list" type="submit" value="<%= listTitle %>">+</button>
    </form>
</div>

<%- include("footer") -%>
